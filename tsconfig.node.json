{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": [
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*"
    ],
    "compilerOptions": {
        // "target": "ES6",
        "target": "ES5",
        // "lib": ["dom", "es6", "dom.iterable", "scripthost"],
        "lib": ["dom", "es5", "scripthost"],
        "composite": true,
        "noEmit": true,
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "types": ["node"]
    }
}
